<?xml version="1.0"?> 

<?xml-stylesheet href="chrome://testing1/skin/overlay.css" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://testing1/locale/overlay.dtd">
<overlay
  id="testing1-toolbar-overlay"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <!-- Add the toolbar button into the browser toolbar palette so that
         the user can show/hide it as desired -->
    <toolbarpalette id="BrowserToolbarPalette">
        <toolbarbutton  id="testing1-toolbarbutton" 
            label="&testing1.helloworld.label;"
            tooltiptext="&testing1.helloworld.label;" 
            class="toolbarbutton-1 chromeclass-toolbar-additional" 
            command="testing1-helloworld-cmd" />
    </toolbarpalette>

</overlay>